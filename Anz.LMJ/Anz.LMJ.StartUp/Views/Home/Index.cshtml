                                    classfilter = "filter-card";
                                    datawowdelay = "0.2s";
                                }
                                else if (IndexFromDate <= dateValue && IndexToDate >= dateValue)

                                {
                                    classfilter = "filter-web";
                                    datawowdelay = "0.3s";
                                }
                                else if (ArchiveFromDate <= dateValue || ArchiveToDate >= dateValue)

                                {
                                    classfilter = "filter-lmj";
                                }
