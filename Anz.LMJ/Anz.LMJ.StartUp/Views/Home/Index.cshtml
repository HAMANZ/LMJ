<body>
    <main id="main" class="index-container">

        <section class="section__banner">

            @{
                List<string> imgs1 = new List<string>();
                imgs1 = @ViewBag.Banner.BackgroundImage;
            }
            <div class="banner--wrapper">
                @for (int d = 0; d < imgs1.Count; d++)
                {
                    <img class="section__banner--img" src="~/Images/Articles/@imgs1[d]">
                }
            </div>
            <div class="section__banner--textbox">
                <h1 class="heading-primary u-margin-bottom-small">
                    @ViewBag.Banner.Title
                </h1>
                <h5 class="heading-tertiary u-margin-bottom-medium">
                    @ViewBag.Banner.SubTitle
                </h5>
                <div class="section__banner--textbox-btns">
                    <a href="/Home/About" class="btn btn-primary">About Us</a>
                    @*<a href="/Home/Members" class="btn btn-blue-trans">Our Members</a>*@
                </div>
            </div>
        </section>
        <br />
        <div class="ArticlsSection">
            <section id="latest-issues">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3">


                            @{ int j = 0;}
                            @foreach (SubmissionLO item in (List<SubmissionLO>)(ViewBag.latestarticles))
                            {

                                if (j == 2)
                                {
                                    <div class="col-md-6 d-flex">
                                        <div class="align-self-stretch">
                                            <a href="/Home/ArticleDetails/@item.Id" class="block-20 rounded" style="background-image: url('/Images/Articles/@item.Photo')"></a>
                                            <div class="text">
                                                <button class="btn btn-secondary">@item.Specialit</button>
                                                <a href="/Home/ArticleDetails/@item.Id">
                                                    <h2 href="/Home/ArticleDetails/@item.Id">
                                                        @(item.Title.Length > 38 ? item.Title.Substring(0,38) + "..." : item.Title)
                                                    </h2>
                                                    <div class="meta mb-2">
                                                        <div>By @item.Author.FirstName  @item.Author.LastName</div>
                                                        <div>@item.PublishDate.ToString("MMM .dd . yyyy") | @item.Type</div>
                                                        <div>@item.Volume |  @item.IssueNO.Split('(')[0]</div>
                                                    </div>
                                                </a>
                                                    <button href="/Home/ArticleDetails/@item.Id" class="btn btn-grey">Read More</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                                if (j < 2)
                                {

                                    string[] issno = @item.IssueNO.Split('(');
                                    <div class="align-self-stretch">
                                        <a href="/Home/ArticleDetails/@item.Id" class="block-10 rounded" style="background-image: url('/Images/Articles/@item.Photo')"></a>
                                        <div class="text">
                                            <button class="btn btn-secondary">@item.Specialit</button>
                                            <a href="/Home/ArticleDetails/@item.Id">
                                                <h3>
                                                    @(item.Title.Length > 38 ? item.Title.Substring(0,38) + "..." : item.Title)
                                                </h3>
                                                <div class="meta mb-2">
                                                    <p> @item.SubTitle</p>
                                                    <div>By @item.Author.FirstName  @item.Author.LastName</div>
                                                    <div>@item.PublishDate.ToString("MMM .dd . yyyy") | @item.Type</div>
                                                    <div>@item.Volume | @issno[0]</div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                }
                                if (j == 1)
                                {
                                @:</div>




                            }
                            j++;
                        }
                    <div class="col-md-3 d-flex grey-box" >
                        <a href="/Home/ArticlesByIssueId?issueid=@ViewBag.latestIssues.Id">
