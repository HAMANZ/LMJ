                                DateTime.TryParse(@ViewBag.issuefilter.ArchiveFromDate.ToString(), out ArchiveFromDate);
                                DateTime.TryParse(@ViewBag.issuefilter.ArchiveToDate.ToString(), out ArchiveToDate);

                                if (CurrentFromDate <= dateValue && CurrentToDate >= dateValue)
                                {
                                    classfilter = "filter-app";
                                    datawowdelay = "0.1s";
                                }
                                else if (RecentFromDate <= dateValue && RecentToDate >= dateValue)

