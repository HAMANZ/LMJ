                                <h1>Latest issue</h1>
                                <h5>@ViewBag.latestIssues.Title </h5>
                                <h5>@ViewBag.latestIssues.IssuePrintNo </h5>
                                <h6>@ViewBag.latestIssues.Date.ToString("MMM .dd . yyyy") </h6>
                                <img src="/Images/Articles/@ViewBag.latestIssues.CoverImage">
                            </div>
                        </a>
                        </div>
                    </div>
                        </div>
