@using Anz.LMJ.BLO.ContentObjects
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    ViewBag.Title = "About Us";
}
<style>
    .owl-item {
        text-align: justify;
    }
</style>


<div class="AboutUsPage">
    <section class="hero-wrap hero-wrap-2" style="background: #808080;" data-stellar-background-ratio="0.5">
        <div class="overlay" style=" background-image: url('/Images/AboutPage/@ViewBag.about.Img')"></div>
    </section>

    <section class="ftco-section about-section padding-top-btm">
        <div class="container">
            <div class="row no-gutters justify-content-center mb-3">
                <div class="col-md-7 heading-section text-center">
                    <h2>@ViewBag.about.Title</h2>
                    <div class="about-border"></div>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-md-12 wrap-about">
                    @Html.Raw(@ViewBag.about.Txt)
                </div>
            </div>
        </div>
    </section>


