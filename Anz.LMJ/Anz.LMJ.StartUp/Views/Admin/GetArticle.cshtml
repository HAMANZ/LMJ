@using Anz.LMJ.BLO.LogicObjects.User;
@{
    ViewBag.Title = "GetArticle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .input {
        position: relative;
        display: block;
        font-weight: 400;
    }

    .icon-append {
        color: #A2A2A2;
    }

    .icon-append {
        border-color: #BDBDBD;
        transition: border-color .3s;
        -o-transition: border-color .3s;
        -ms-transition: border-color .3s;
        -moz-transition: border-color .3s;
        -webkit-transition: border-color .3s;
    }

    .icon-append {
        right: 5px;
        padding-left: 3px;
        border-left-width: 1px;
        border-left-style: solid;
    }

    .icon-append {
        position: absolute;
        top: 5px;
        width: 22px;
        height: 22px;
        font-size: 14px;
        line-height: 22px;
        text-align: center;
    }

    .input img {
        /*width: 50%;*/
    }

    .ImgClick {
        background-image: url(/Images/delete.png);
        background-repeat: no-repeat;
        width: 2em;
        background-color: transparent;
        border: 0;
        vertical-align: middle;
        background-position: center;
        background-size: contain;
    }

    .list-inline {
        position: relative;
    }

        .list-inline input[type=file] {
            position: absolute;
            top: 2rem;
        }
</style>
<div id="main" role="main">
    <div id="ribbon" style="display: block;">
        <ol class="breadcrumb">
            <li>Home</li>
            <li>@ViewBag.Title</li>
        </ol>
    </div>
    <div id="content">
        <!-- row -->
        <div class="row">

            <div class="row">
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                    <label class="col-sm-12 control-label">
                        <strong>Title</strong>
                    </label>
                </div>
                <div class="col-xs-4 col-sm-4 col-md-5 col-lg-4">
                    <input class="form-control input__beautify" type="text" name="Title" disabled value="@ViewBag.article.Title" />
                </div>
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-2">
                    <div class="form-group">

                        <strong>IsEditorsPick</strong><input type="checkbox" value="@ViewBag.article.isEditorsPick" checked="@ViewBag.article.isEditorsPick" id="IsEditorsPick" name="IsEditorsPick" />
                    </div>
                </div>
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-2">
                    <div class="form-group">
                        <strong>IsTopReader</strong><input type="checkbox" value="" checked="@ViewBag.article.isTopReader" id="IsTopReader" name="IsTopReader" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                    <div class="form-group">
                        <label class="col-sm-12 control-label">
                            <strong>Author</strong>
                        </label>
                    </div>
                </div>
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-4">
                    <div class="form-group">
                        <select class="form-control " name="UserId" id="UserId">
                            <option value="0">Authors</option>
                            @foreach (UserLO item in (List<UserLO>)(ViewBag.users))
                            {
                                var sel="";
                                if (@ViewBag.article.UserId == @item.Id)
                                { sel = "selected"; }
                                <option value="@item.Id" @sel>@item.FirstName @item.LastName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                    <label class="col-sm-12 control-label">
                        <strong>Tags</strong>
                    </label>
                </div>
                <div class="col-xs-4 col-sm-4 col-md-5 col-lg-4">
                    <div class="form-group">
                        <label class="label" for="name">Tags</label>
                        <select multiple class="form-control select2 Tags" id="IssueDate">
                            <option value="0">Tags</option>
                            @foreach (UserLO item in (List<UserLO>)(ViewBag.users))
                            {
                                var sel = "";
                                if(ViewBag.article.Tags != null) {
                                    foreach (UserLO tags in (List<UserLO>)(ViewBag.article.Tags))
                                    {

                                        if (@tags.Id == @item.Id)
                                        { sel = "selected"; }

                                    }
                                }

                                <option value="@item.Id" @sel>@item.FirstName @item.LastName</option>
                            }
                        </select>
                    </div>
                </div>

            </div>


            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-8">
                <button type="submit" class="btn btn-sm btn-primary Editarticle"> Publish </button>
                <input type="hidden" name="Id" value="@ViewBag.article.Id" />
            </div>





        </div>

    </div>

</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(".Editarticle").click(function () {
        Id = $("input[name='Id']").attr("value");
        UserId = $("select[name='UserId']").val();
        tagsid = $(".Tags").val()
        IsTopReader = "False";
        IsEditorsPick = "False";

        if ($("#IsTopReader").is(":checked")) {
            IsTopReader = "True";
        }

        if ($("#IsEditorsPick").is(":checked")) {
            IsEditorsPick = "True";
        }
        //alert(UserId + IsEditorsPick + IsTopReader +"tagsss"+ tagsid );
        $.ajax({
		    type: 'POST',
		    url: '@Url.Action("EditArticle")',
		    data: {
                submissionid: Id,
                userId: UserId,
                isTopReader: IsTopReader,
                isEditorsPick: IsEditorsPick,
                tagsid: tagsid
		    },
		    success: function (result) {
			    if (result.HttpStatusCode != 200) {
				    alert(result.Message);
                } else {

                    location.reload();
			    }
		    },
		    error: function (ex) {

		    }
	    });
    });
</script>