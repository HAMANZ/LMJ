
@{
    ViewBag.Title = "Add New CitationType";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>

</style>
<div id="main" role="main">
    <div id="ribbon" style="display: block;">
        <ol class="breadcrumb">
            <li>Home</li>
            <li>@ViewBag.Title</li>
        </ol>
    </div>
    <div id="content">
        <!-- row -->
        <div class="row">

            @using (Html.BeginForm("AddCitationType", "Admin", FormMethod.Post, new { @class = "AddCitationType", enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-xs-2 col-sm-2 col-md-1 col-lg-1">
                        <label class="col-sm-12 control-label">
                            <strong>Title</strong>
                        </label>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-5 col-lg-4">
                        <input class="form-control input__beautify" type="text" name="Title" />
                    </div>
                    <div class="col-xs-3 col-sm-2  col-lg-1">
                        <div class="form-group">
                            <label class="col-sm-12 control-label">
                                <strong>IsEnabled</strong>
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-4 col-lg-4">
                        <div class="form-group">
                            <input type="checkbox" id="IsEnabledchk" />
                            <input type="hidden" name="IsEnabled" id="IsEnabledcheck" value="False" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                        <div class="form-group">
                            <label class="col-sm-12 control-label">
                                <strong>Form</strong>
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-9 col-lg-7">
                        <div class="form-group">
                            <textarea name="Txt" style="display:none" id="txteditorvalue"></textarea>
                            <textarea style="height: 200px" name="Text"></textarea>
                        </div>
                    </div>
                    <div class="col-xs-2 col-lg-3">
                        <div class="form-group">
                            <fieldset>
                                <legend>List Of Variables:</legend>
                                @foreach (string item in ViewBag.CitationVariable)
                                {
                                    <label for="@item">@item</label><br>
                                }
                            </fieldset>
                        </div>
                    </div>
                </div>
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-8">
                    <button type="submit" class="btn btn-sm btn-primary"> Publish </button>
                </div>


            }

        </div>

    </div>

</div>


<script src="~/Scripts/cms/plugin/ckeditor/ckeditor.js"></script>
<script>

    var bodyEditor;



    function SetContents() {
        // Get the editor instance that we want to interact with.
        var editor = CKEDITOR.instances.Text;
        // Set editor contents (replace current contents).
        // http://docs.ckeditor.com/#!/api/CKEDITOR.editor-method-setData
        editor.setData($("#txteditorvalue").text());
    }

    function GetContents() {
        // Get the editor instance that you want to interact with.
        var editor = CKEDITOR.instances.Text;
        // Get editor contents
        // http://docs.ckeditor.com/#!/api/CKEDITOR.editor-method-getData
        $("#txteditorvalue").html(editor.getData());
    }

    $(document).ready(function () {
        //alert($("#txteditorvalue").html());
        //$("#txtEditor").Editor();
        bodyEditor = CKEDITOR.replace('Text');
        SetContents();

        // Handle when the Source changes.
        bodyEditor.on('mode', function () {
            if (this.mode == 'source') {
                var editable = bodyEditor.editable();
                editable.attachListener(editable, 'input', function () {
                    GetContents()
                });
            }
        });

        // Handle when the HTML changes.
        bodyEditor.on('change', function () {
            GetContents()
        });

        $('#IsEnabledchk').change(function () {
            if ($("#IsEnabledchk").is(":checked")) {
                $("#IsEnabledcheck").attr("value", "True");
            }
            else {
                $("#IsEnabledcheck").attr("value", "False");
            }

        });
    });


    GetContents();

</script>
