
@{
    ViewBag.Title = "AddEventsSectionForm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="main" role="main">
    <div id="ribbon" style="display: block;">
        <ol class="breadcrumb">
            <li>Home</li>
            <li>@ViewBag.Title</li>
        </ol>
    </div>
    <div id="content">
        <!-- row -->
        <div class="row">

            @using (Html.BeginForm("AddTeam", "Admin", FormMethod.Post, new { @class = "AddTeam", enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                        <label class="col-sm-12 control-label">
                            <strong>Title</strong>
                        </label>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-5 col-lg-4">
                        <input class="form-control input__beautify" type="text" name="Name"  />
                    </div>
                    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                        <div class="form-group">
                            <label class="col-sm-12 control-label">
                                <strong>MainDesc</strong>
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-5 col-lg-4">
                        <div class="form-group">
                            <textarea rows="10" cols="50" class="form-control input__beautify" type="text" name="MainDesc"></textarea>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                        <div class="form-group">
                            <label class="col-sm-12 control-label">
                                <strong>Position</strong>
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-5 col-lg-4">
                        <div class="form-group">
                            <input class="form-control input__beautify" type="text" name="Position"  />

                        </div>
                    </div>
                    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                        <div class="form-group">
                            <label class="col-sm-12 control-label">
                                <strong>Image</strong>
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-5 col-lg-4">
                        <input type="file" name="PostedFileImage" id="imgInp" class="custom-file-input" style="width:50%;">
                    </div>

                </div>


                <div class="row">
                    <div class="col-xs-4 col-sm-4 col-md-5 col-lg-6">

                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-5 col-lg-4">
                        <input type="hidden" name="MainImg" id="BackGroundImage" id="imgInp" value="" />
                        <img src="" alt="img" width="50%" id="blah" accept="image/png,image/gif,image/jpeg">
                        <br />
                        <span>Recommended Size: 195*195</span>
                    </div>

                </div>
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-8">
                    <button type="submit" class="btn btn-sm btn-primary"> Publish </button>
                    <input type="hidden" name="Id" value="" />
                </div>


            }

        </div>

    </div>

</div>
<script src="~/Scripts/cms/CmsJquery.js"></script>
<script src="~/Scripts/cms/Admin/jquery-3.3.1.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
<script src="~/Scripts/cms/app.config.js"></script>
<script src="~/Scripts/cms/app.min.js"></script>
<script src="~/Scripts/cms/CmsJquery.js"></script>
<script src="~/Scripts/cms/plugin/jquery-form/jquery-form.min.js"></script>
