@using Anz.LMJ.BLO.ContentObjects;
@using Anz.LMJ.BLO.LogicObjects.Review
@using Anz.LMJ.BLO.LookUpObjects;
@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="main" role="main">
    <div id="ribbon" style="display: block;">
        <ol class="breadcrumb">
            <li>Home</li>
            <li>@ViewBag.Title </li>
        </ol>
    </div>
    <div id="content">

        <div class="jarviswidget jarviswidget-color-darken" id="IngredientsTable" data-widget-editbutton="false">


            <div>
                <div class="jarviswidget-editbox">
                </div>
                <div class="widget-body no-padding">
                    <table id="dt" class="table table-striped table-bordered table-hover" width="100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>FName</th>
                                <th>LName</th>
                                <th>Title</th>
                                <th>StarNb</th>
                                <th>IsAdmit</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 0;
                            }

                            @foreach (var item in (List<ReviewLO>)ViewBag.reviews)
                            {

                                i = i + 1;

                            <tr id="@item.Id">
                                <td>@i</td>
                                <td>@item.FName</td>
                                <td>@item.LName</td>
                                <td>@(item.Text.Length > 60 ? item.Text.Substring(0,60) + "..." : item.Text)</td>
                                <td>@item.NbOfStars</td>
                                <td><input type="checkbox" id="IsAdmitchk" checked="@item.IsAdmit" value="@item.IsAdmit" /></td>
                                <td>
                                    <a name="delete" class="btn btn-sm btn-primary fa fa-pencil " data-row-id="@item.Id" href="/Admin/GetReview/@item.Id">Edit</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>

            </div>

        </div>

    </div>

</div>

<script>

    $("document").ready(function () {
        table = $('#dt').DataTable({
            rowReorder: true,
        });
    });
</script>