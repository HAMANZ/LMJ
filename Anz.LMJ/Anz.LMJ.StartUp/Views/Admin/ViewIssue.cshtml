@using Anz.LMJ.BLO.ContentObjects;
@using Anz.LMJ.BLO.LogicObjects.Issue
@using Anz.LMJ.BLO.LookUpObjects;
@{
    ViewBag.Title = "Issues";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="main" role="main">
    <div id="ribbon" style="display: block;">
        <ol class="breadcrumb">
            <li>Home</li>
            <li> Articles</li>
        </ol>
    </div>
    <div id="content">

        <div class="jarviswidget jarviswidget-color-darken" id="IngredientsTable" data-widget-editbutton="false">


            <div>
                <div class="jarviswidget-editbox">
                </div>
                <div class="widget-body no-padding">
                    <table id="dt" class="table table-striped table-bordered table-hover" width="100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>No</th>
                                <th>Title</th>
                                <th>Date</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 0;
                            }

                            @foreach (var item in (List<IssueLO>)ViewBag.Issues)
                            {

                                i = i + 1;

                            <tr id="@item.Id">
                                <td>@i</td>
                                <td>@item.IssueNo</td>
                                <td>@item.Title</td>
                                <td>
                                    @if (@item.Date != null)
                                    {
                                        @item.Date.ToString("MMM .dd . yyyy")
                                    }

                                </td>
                                <td>
                                <img src="~/Images/Issues/@item.CoverImage" style="width:50px;height:50px;" />
                                </td>
                                <td>
                                    <a name="delete" class="btn btn-sm btn-danger fa fa-pencil " data-row-id="@item.Id" href="/Admin/GetIssue/@item.Id">Edit</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>

            </div>

        </div>

    </div>

</div>








<script src="~/Scripts/cms/Admin/jquery-3.3.1.js"></script>
<script src="~/Scripts/cms/CmsJquery.js"></script>
<script>

    $("document").ready(function () {
        table = $('#dt').DataTable({
            rowReorder: true,
        });
    });
</script>